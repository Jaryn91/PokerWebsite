@model IEnumerable<PokerWebsite.Core.Domain.Venue>

@{
    ViewData["Title"] = "Venue";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New Venue</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Day)
        </th>
        <th>
        @Html.DisplayNameFor(model => model.Hour)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour) : @Html.DisplayFor(modelItem => item.Minute)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
            </td>
        </tr>
    }
</table>
